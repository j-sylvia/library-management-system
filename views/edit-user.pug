extends layout

block content
  div.container.text-center.w-50.bg-info.p-5
    h1.pb-2 Edit User
    form(action=`/admin/user/${users.user_id}/edit` method="POST")
      label(for="user_name") UserName:
      input.form-control(type="text" id="user_name" name="user_name" value=users.user_name)
      br
      label(for="user_email") Email:
      input.form-control(type="email" id="user_email" name="user_email" value=users.user_email)
      br
      button.btn.btn-dark.w-25(type="submit") Update