extends layout

block content
  div.container.text-center.w-25.bg-info.p-5
    h1.pb-3 Create Admin
    form(action="/admin/create" method="post")
      label(for="admin_name") Admin Username:
      input.form-control(type="text" id="admin_name" name="admin_name" required)
      br
      label(for="admin_password") Password:
      input.form-control(type="text" id="admin_password" name="admin_password" required)
      br
      label(for="admin_email") Email:
      input.form-control(type="email" id="admin_email" name="admin_email" required)
      br
      label(for="admin_photo") Profile Image:
      input(type="file" id="admin_photo" name="admin_photo" required)
      br
      br
      button.btn.btn-dark.w-50(type="submit") Create
